{
  "name": "openclaw-memory-sync",
  "version": "1.0.0",
  "description": "Obsidian plugin for real-time bidirectional sync between OpenClaw memory and Obsidian notes",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist main.js styles.css",
    "prepublish": "npm run build",
    "start": "npm run dev",
    "watch": "npm run dev -- --watch",
    "validate": "node scripts/validate-workflows.js",
    "ci": "npm run lint && npm run build && npm run validate"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "openclaw",
    "memory",
    "sync",
    "ai",
    "notes",
    "knowledge",
    "real-time",
    "bidirectional"
  ],
  "author": "YearsAlso",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YearsAlso/openclaw-memory-sync.git"
  },
  "bugs": {
    "url": "https://github.com/YearsAlso/openclaw-memory-sync/issues"
  },
  "homepage": "https://github.com/YearsAlso/openclaw-memory-sync#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "0.17.3",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "obsidian": "latest",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "obsidian": ">=0.15.0"
  },
  "files": [
    "main.js",
    "styles.css",
    "manifest.json"
  ]
}